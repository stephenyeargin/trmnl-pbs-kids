<div class="layout layout--row">
  {% render "error_or_empty" with IDX_0: IDX_0, items: items %}
  <div class="columns"
    data-overflow-max-height="420"
    data-overflow-max-cols="4"
    data-overflow-counter="false"
  >
    <div class="column">
      {% for item in items %}
      <div class="item">
        <div class="meta"></div>
        <div class="content">
          <img src="{{ item.images.kids-mezzannine-16x9.url }}" class="image image-dither w--full mb--1" />
          <div class="label label--small">
            {{ item.premiered_on | date: '%-m/%-d/%Y' }}
          </div>
          <div class="title title--small" data-clamp="1">{{ item.title }}</div>
          <div class="description" data-clamp="2">{{ item.description }}</div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>

<div class="title_bar">
  <img class="image" src="https://upload.wikimedia.org/wikipedia/commons/e/e3/PBS_Kids_logo_%282022%29.svg" />
  <span class="title">{{ show_title }}</span>
  <span class="instance">{{ trmnl.plugin_settings.instance_name }}</span>
</div>
